{% extends "base.njk" %}

{% block titulo %}Insertar limpieza nueva{% endblock %}

{% block contenido %}
    <h1>Limpiezas de habitacion {{ habitacion.numero }}</h1>
    <div class="row g-3 mx-5">
        <form action="/limpiezas/{{ habitacion._id }}" method="post">
            <div class="form-group mb-3">
                <label for="fecha" class="col-sm col-form label">Fecha de limpieza</label>
                <div class="col-xl-6 col-lg-8">
                    <input type="date" class="form-control" name="fecha"
                    placeholder="Fecha de la limpieza..." value="{{ limpieza.fecha or hoy | date("YYYY-MM-DD") }}"/>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="observaciones" class="col-sm-1 col-form label">Observaciones</label>
                <div class="col-xl-6 col-lg-8">
                    <textarea name="observaciones" class="form-control" cols="30" rows="10"
                    placeholder="Observaciones de la limpieza..."></textarea>
                </div>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Enviar</button> <a href="/limpiezas/{{ habitacion.id }}" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
{% endblock %}